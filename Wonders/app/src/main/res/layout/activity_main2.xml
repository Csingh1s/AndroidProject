<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.csing1s.wonders.ui.Main2Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PageTwoImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:cropToPadding="false"
        android:src="@drawable/page0"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" This statue of Jesus stands some 38 meters tall, atop the Corcovado mountain overlooking Rio de Janeiro. Designed by Brazilian Heitor da Silva Costa and created by French sculptor Paul Landowski, it is one of the worldâ€™s best-known monuments.It has become a symbol of the city and of the warmth of the Brazil."
        android:id="@+id/FirstWonderText"
        android:layout_below="@+id/PageTwoImage"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:lineSpacingMultiplier="1.2"
        android:paddingTop="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore This Country"
        android:layout_alignLeft="@+id/FirstWonderText"
        android:layout_alignStart="@+id/FirstWonderText"
        android:layout_alignParentBottom="true"
        android:id="@+id/ExploreBotton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT WONDER"
        android:id="@+id/NextwonderButton"
        android:layout_alignLeft="@+id/FirstWonderText"
        android:layout_alignStart="@+id/FirstWonderText"
        android:layout_above="@+id/ExploreBotton"/>

</RelativeLayout>
